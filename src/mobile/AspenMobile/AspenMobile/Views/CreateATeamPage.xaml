<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AspenMobile.Views.CreateATeamPage">
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="Enter Name" HorizontalOptions="Center"/>
            <Entry Text="{Binding Name}" HorizontalOptions="Center"/>
            <Label Text="Enter Description" HorizontalOptions="Center"/>
            <Entry Text="{Binding Description}" HorizontalOptions="Center"/>
            <Label Text="Enter Donation Target" HorizontalOptions="Center"/>
            <Entry Text="{Binding DonationTarget}" HorizontalOptions="Center"/>
            <Button Command="{Binding CreateTeamAsyncCommand}" Text="Create Team" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>